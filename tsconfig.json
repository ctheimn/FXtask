{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["jest", "node"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "global.d.ts"]
}
